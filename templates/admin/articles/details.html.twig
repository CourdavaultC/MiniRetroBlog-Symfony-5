{% extends 'base.html.twig' %}

{% block title %}MiniRetroBlog{% endblock %}

{% block body %}
    
            {% for image in article.images %}
                <img src="{{ asset('uploads/' ~ image.name)|imagine_filter('square') }}" alt="{{ article.title }}">
            {% endfor %}
            
        
            <div class="card">
                <div class="">
                    <img src="{{ asset('uploads/' ~ article.images[0].name)|imagine_filter('square') }}" alt="{{ article.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{article.title}}</h5>
                        <p class="card-text">Catégorie : {{article.categories.name}}</p>
                        <p class="card-text">{{article.content|raw}}</p>
                        <a href="{{ path('app_home') }}" class="btn btn-primary">Retour à l'accueil</a>
                    </div>
                </div>
            </div>
        
    
{% endblock %}
