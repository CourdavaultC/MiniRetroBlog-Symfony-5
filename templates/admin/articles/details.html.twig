{% extends 'base.html.twig' %}

{% block title %}Détail de l'article{% endblock %}

{% block body %}
    <div class="container-fluid mt-3 mb-3">
        <div class="text-center">
            {% for image in article.images %}
                <img src="{{ asset('uploads/' ~ image.name)|imagine_filter('square') }}" alt="{{ article.title }}">
            {% endfor %}
        </div>
    </div>  
        
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">{{article.title}}</h5>
                    <p class="card-text">Catégorie : {{article.categories.name}}</p>
                    <p class="card-text">{{article.content|raw}}</p>
                    <a href="{{ path('app_home') }}" class="btn btn-primary">Retour à l'accueil</a>
                </div>
            </div>
{% endblock %}
