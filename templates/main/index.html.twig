{% extends 'base.html.twig' %}

{% block title %}MiniRetroBlog{% endblock %}

{% block body %}
    <div class="container mt-2">
        {{ form(form) }}
        <div class="card-columns mt-2 mb-2">
            {% for article in articles %}
                <div class="row text-center align-items-baseline">
                    <div class="col-sm-6">
                        <div class="card" style="width: 18rem;">
                            <a href="{{ path('articles_details', {slug: article.slug}) }}"><img src="{{ asset('uploads/' ~ article.images[0].name)|imagine_filter('square') }}" alt="{{ article.title }}">
                            <div class="card-body"></a>
                                <h5 class="card-title">{{article.title}}</h5>
                                    <p class="card-text">Cat√©gorie : {{article.categories.name}}</p>
                                    <p class="card-text">{{article.content|striptags|u.truncate(50, '...')}}</p>
                                <div class="text-danger mt-2 mb-2">
                                    {% if is_granted("ROLE_USER") %}
                                        {% for favoris in article.favoris %}
                                            {% if favoris.id == app.user.id %}
                                                <a href="{{ path('articles_retrait_favoris', {id: article.id}) }}"><i class="fas fa-heart text-danger"></i></a>
                                            {% else %}
                                                <a href="{{ path('articles_ajout_favoris', {id: article.id}) }}"><i class="far fa-heart text-danger"></i></a>
                                            {% endif %}
                                        {% else %}
                                            <a href="{{ path('articles_ajout_favoris', {id: article.id}) }}"><i class="far fa-heart text-danger"></i></a>
                                        {% endfor %}
                                    {% else %}
                                        <i class="far fa-heart text-danger"></i>   
                                    {% endif %}  
                                </div>
                                    <a href="{{ path('articles_details', {slug: article.slug}) }}" class="btn btn-primary">Lire l'article</a>
                            </div>
                        </div>
                    </div> 
                    
                    
                </div>   
            {% endfor %}
        </div>
    </div>
{% endblock %}
