{% extends 'base.html.twig' %}

{% block title %}MiniRetroBlog{% endblock %}

{% block body %}
    <div class="container">
        {% for article in articles %}
            <div class="card">
                <div class="">
                    <img src="{{ asset('uploads/' ~ article.images[0].name)|imagine_filter('square') }}" alt="{{ article.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{article.title}}</h5>
                        <p class="card-text">Cat√©gorie : {{article.categories.name}}</p>
                        <p class="card-text">{{article.content|striptags|u.truncate(25, '...')}}</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
